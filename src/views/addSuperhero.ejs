<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Guerrero Z</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-to-br from-blue-900 via-black to-gray-900 min-h-screen flex items-center justify-center text-white">
    <div class="w-full max-w-lg p-8 rounded-lg mt-28">
        <h1 class="text-3xl font-extrabold text-yellow-300 mb-6 text-center bg-gray-900 bg-opacity-90">Agregar Guerrero Z</h1>
        <form class="form-container p-8" id="superheroForm" action="/api/heroes" method="POST" onsubmit="return validarFormulario(event)">
            <div class="mb-4">
                <label for="nombreSuperHeroe" class="block text-yellow-300 font-bold mb-2">Alias del Guerrero:</label>
                <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" required minlength="3" maxlength="60" placeholder="Son Goku" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorNombreSuperHeroe" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="nombreReal" class="block text-yellow-300 font-bold mb-2">Nombre Real:</label>
                <input type="text" id="nombreReal" name="nombreReal" required minlength="3" maxlength="60" placeholder="Kakaroto" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorNombreReal" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="edad" class="block text-yellow-300 font-bold mb-2">Edad:</label>
                <input type="number" id="edad" name="edad" required min="0" placeholder="42" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorEdad" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="planetaOrigen" class="block text-yellow-300 font-bold mb-2">Planeta de Origen:</label>
                <input type="text" id="planetaOrigen" name="planetaOrigen" required placeholder="Vegeta" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorPlanetaOrigen" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="debilidad" class="block text-yellow-300 font-bold mb-2">Debilidad:</label>
                <input type="text" id="debilidad" name="debilidad" required placeholder="Exceso de confianza" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorDebilidad" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="poderes" class="block text-yellow-300 font-bold mb-2">Poderes (separados por comas):</label>
                <input type="text" id="poderes" name="poderes" required placeholder="Kamehameha, Kaioken, Ultra Instinto" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorPoderes" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="aliados" class="block text-yellow-300 font-bold mb-2">Aliados:</label>
                <input type="text" id="aliados" name="aliados" required placeholder="Krillin, Piccolo, Vegeta" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorAliados" class="error"></span>
            </div>
            <div class="mb-4">
                <label for="enemigos" class="block text-yellow-300 font-bold mb-2">Enemigos:</label>
                <input type="text" id="enemigos" name="enemigos" required placeholder="Freezer, Cell, Majin Boo" class="w-full p-2 rounded bg-gray-800 border border-gray-600 focus:ring-2 focus:ring-yellow-500">
                <span id="errorEnemigos" class="error"></span>
            </div>
            <div class="flex justify-between">
                <a href="/dashboard" class="bg-red-600 hover:bg-red-500 text-white font-bold py-2 px-4 rounded-lg shadow-lg transition duration-300">Cancelar</a>
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-2 px-4 rounded-lg shadow-lg transition duration-300">Agregar</button>
            </div>
        </form>
    </div>

    <script>
        function validarFormulario(event) {
            let isValid = true;

            // Validación del nombre de superhéroe
            const nombreSuperHeroe = document.getElementById('nombreSuperHeroe').value;
            if (nombreSuperHeroe.length < 3) {
                document.getElementById('errorNombreSuperHeroe').innerText = 'El alias debe tener al menos 3 caracteres.';
                isValid = false;
            } else {
                document.getElementById('errorNombreSuperHeroe').innerText = '';
            }

            // Validación del nombre real
            const nombreReal = document.getElementById('nombreReal').value;
            if (nombreReal.length < 3) {
                document.getElementById('errorNombreReal').innerText = 'El nombre real debe tener al menos 3 caracteres.';
                isValid = false;
            } else {
                document.getElementById('errorNombreReal').innerText = '';
            }

            // Validación de la edad
            const edad = document.getElementById('edad').value;
            if (edad < 0) {
                document.getElementById('errorEdad').innerText = 'La edad no puede ser negativa.';
                isValid = false;
            } else {
                document.getElementById('errorEdad').innerText = '';
            }

            // Validación del planeta de origen
            const planetaOrigen = document.getElementById('planetaOrigen').value;
            if (planetaOrigen.trim() === '') {
                document.getElementById('errorPlanetaOrigen').innerText = 'El planeta de origen es obligatorio.';
                isValid = false;
            } else {
                document.getElementById('errorPlanetaOrigen').innerText = '';
            }

            // Validación de la debilidad
            const debilidad = document.getElementById('debilidad').value;
            if (debilidad.trim() === '') {
                document.getElementById('errorDebilidad').innerText = 'La debilidad es obligatoria.';
                isValid = false;
            } else {
                document.getElementById('errorDebilidad').innerText = '';
            }

            // Validación de los poderes
            const poderes = document.getElementById('poderes').value;
            if (poderes.trim() === '') {
                document.getElementById('errorPoderes').innerText = 'Los poderes son obligatorios.';
                isValid = false;
            } else {
                document.getElementById('errorPoderes').innerText = '';
            }

            // Validación de los aliados
            const aliados = document.getElementById('aliados').value;
            if (aliados.trim() === '') {
                document.getElementById('errorAliados').innerText = 'Los aliados son obligatorios.';
                isValid = false;
            } else {
                document.getElementById('errorAliados').innerText = '';
            }

            // Validación de los enemigos
            const enemigos = document.getElementById('enemigos').value;
            if (enemigos.trim() === '') {
                document.getElementById('errorEnemigos').innerText = 'Los enemigos son obligatorios.';
                isValid = false;
            } else {
                document.getElementById('errorEnemigos').innerText = '';
            }

            return isValid; // Solo se enviará el formulario si es válido
        }
    </script>
</body>

</html>
